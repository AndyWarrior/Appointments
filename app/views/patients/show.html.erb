<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @patient.name %>
</p>

<p>
  <strong>Appointments:</strong>
</p>

<% @patient.appointments.each do |appointment| %>
<p>
  <strong>Doctor: </strong> <%= appointment.physician.name %>
  <strong>Date: </strong> <%= appointment.appointment_date.to_s(:long) %>
</p>
<% end %>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
